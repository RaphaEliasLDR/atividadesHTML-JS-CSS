<body>
    <script>
        function contemElemento(array, elemento){
            return array.includes(elemento);
        }

        let frutas = ['maçã','banana','laranja'];
        console.log(contemElemento (frutas,'banana'));
        console.log(contemElemento (frutas,'uva'));
    </script>
</body>
