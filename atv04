<body>
    <script>
        function removerElemento (array,elemento){
        return array.filter(function(item){
            return item !== elemento;
        });
    }

    let frutas = ["maçã", "banana","laranja","manga"];
    let resultado = removerElemento(frutas,"laranja");
    console.log(resultado);

    </script>
</body>
</html>
